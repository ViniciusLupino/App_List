@model IEnumerable<AppTarefas.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<h1>Categorias</h1>

<p>
    <a asp-action="Create" class="btn add text-white">Adicionar categoria</a>
</p>
<div class="table-responsive-sm">
    <table class="table ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoriaNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoriaCor)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriaNome)
                    </td>
                    <td style="background-color:@item.CategoriaCor" class="fw-bold text-dark">
                        @Html.DisplayFor(modelItem => item.CategoriaCor)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn edit text-white"><svg bootstrap-icon="Pencil" width="16" height="16" class="text-white"></svg></a>

                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn details text-white"><svg bootstrap-icon="InfoCircle" width="16" height="16" class="text-white"></svg></a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn delete text-white"><svg bootstrap-icon="Trash" width="16" height="16" class="text-white"></svg></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
