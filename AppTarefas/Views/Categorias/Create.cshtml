@model AppTarefas.Models.Categoria

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Adicionar categoria</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoriaNome" class="control-label mb-2"></label>
                <input asp-for="CategoriaNome" class="form-control" />
                <span asp-validation-for="CategoriaNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaCor" class="control-label mb-2"></label>
                <input asp-for="CategoriaCor" type="color" class="form-control" placeholder="Digite a categoria"/>
                <span asp-validation-for="CategoriaCor" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit"  value="Adicionar" class="btn add text-white" />
                <a asp-action="Index" class="btn btn-secondary fw-bold">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
