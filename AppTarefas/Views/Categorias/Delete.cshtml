@model AppTarefas.Models.Categoria

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar categoria</h1>

<h3 class="alert alert-danger">Você realmente deseja apagar esta categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaCor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaCor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Deletar" class="btn delete fw-bold text-white" />
        <a asp-action="Index" class="btn btn-secondary text-white fw-bold">Voltar</a>
    </form>
</div>
