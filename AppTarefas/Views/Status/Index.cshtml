@model IEnumerable<AppTarefas.Models.Status>

@{
    ViewData["Title"] = "Status";
}

<h1>Status</h1>

<p>
    <a asp-action="Create" class="btn add text-white">Adicionar status</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StatusNome)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusNome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StatusId" class="btn edit text-white"><svg bootstrap-icon="Pencil" width="16" height="16" class="text-white"></svg></a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.StatusId" class="btn details text-white"><svg bootstrap-icon="InfoCircle" width="16" height="16" class="text-white"></svg></a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.StatusId" class="btn delete text-white"><svg bootstrap-icon="Trash" width="16" height="16" class="text-white"></svg></a>
                </td>
            </tr>
        }
    </tbody>
</table>
