@model AppTarefas.Models.Status

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar status</h1>

<h4>Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StatusId" />
            <div class="form-group">
                <label asp-for="StatusNome" class="control-label mb-3"></label>
                <input asp-for="StatusNome" class="form-control" />
                <span asp-validation-for="StatusNome" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn save fw-bold text-white" />
                <a asp-action="Index" class="btn btn-secondary fw-bold text-white">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
