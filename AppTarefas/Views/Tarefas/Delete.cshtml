@model AppTarefas.Models.Tarefa

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar tarefa</h1>

<h3 class="alert alert-danger">Você realmente deseja apagar esta tarefa?</h3>
<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TarefaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TarefaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataFim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.StatusNome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TarefaId" />
        <input type="submit" value="Deletar" class="btn delete fw-bold text-white" />
        <a asp-action="Index" class="btn btn-secondary text-white fw-bold">Voltar</a>
    </form>
</div>
